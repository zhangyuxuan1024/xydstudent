<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f3f3f3"
    android:orientation="vertical" >

    <com.xyd.student.xydexamanalysis.view.TitleBar
        android:id="@+id/single_question_titlebar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" >
    </com.xyd.student.xydexamanalysis.view.TitleBar>

    <com.xyd.student.xydexamanalysis.view.DetailTitle
        android:id="@+id/single_question_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.xyd.student.xydexamanalysis.view.DetailTitle>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/slip_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical" >

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/white"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/scroll_ll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >
            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/slip_color" />
        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dip"
            android:layout_marginRight="19dip"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/sanjiao" />
        </LinearLayout>
        -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="9dip"
            android:layout_marginLeft="19dip"
            android:layout_marginRight="19dip"
            android:layout_marginTop="9dip"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/icon_judge"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_marginLeft="4dip"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/icon_jiang"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_alignTop="@+id/icon_you"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@+id/icon_you"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/icon_you"
                android:layout_width="33dip"
                android:layout_height="33dip"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="18dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/ti_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dip"
                android:layout_toRightOf="@+id/icon_judge"
                android:textColor="@color/black"
                android:textSize="26sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="19dip"
            android:layout_marginRight="19dip"
            android:background="@color/slip_color"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dip"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="33dip"
            android:layout_marginTop="13dip"
            android:background="#ffffff"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/man_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="4dip"
                        android:textColor="#333333"
                        android:textSize="19sp" />

                    <LinearLayout 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dip"
                        >
                        <TextView
                        android:id="@+id/text_difficulty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:layout_marginTop="4dip"
                        android:text="试题难度："
                        android:textSize="13sp" />
                    <ImageView
                        android:id="@+id/icon_your_xingxing"
                        android:layout_width="wrap_content"
                        android:layout_height="23dip"
                        android:layout_marginLeft="6dip"
                        android:contentDescription="@string/app_name"
                        android:scaleType="center" />
</LinearLayout>
                    <TextView
                        android:id="@+id/text_personScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:text="您的得分"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_classScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dip"
                        android:text="您的得分"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/text_gradeScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的得分"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="6dip"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/your_fen"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:text="6分"
                        android:textColor="@color/app_color"
                        android:textSize="36sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="您的得分"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>
            <!--
                 <com.xyd.student.xydlargeImage.view.LargeImageView
                android:id="@+id/scro_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/d_pian"/>
            -->
            <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="4dip"
            android:background="@color/slip_color"
            android:contentDescription="@string/app_name" />
			<TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="14dip"
			    android:layout_marginBottom="15dip"
			    android:layout_gravity="center_horizontal"
			    android:text="试卷展示"
			    android:textSize="13sp"
			    android:textColor="#fe641e"
			    />
            <FrameLayout
                android:id="@+id/scro_image_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >
            </FrameLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#b4b4b4"
            android:contentDescription="@string/app_name" />
    </LinearLayout>
    
</LinearLayout>