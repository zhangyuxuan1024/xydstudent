<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >
        
    <com.xyd.student.xydexamanalysis.view.TitleBar
        android:id="@+id/register_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height" >
    </com.xyd.student.xydexamanalysis.view.TitleBar>
    <TextView 
  	    android:id="@+id/re_fo_name"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_below="@+id/register_title"
  	    android:layout_marginTop="78dp"
  	    android:layout_marginLeft="30dp"
  	    android:text="你好"
  	    android:textColor="#555555"
  	    android:textSize="16sp"
  	        	/>

  	 <LinearLayout
  	     android:layout_width="match_parent"
  	     android:layout_height="wrap_content"
  	     android:layout_below="@+id/register_title"
  	     android:layout_marginTop="75dp"
  	     android:layout_marginRight="50dp"
  	     android:layout_marginLeft="6dp"
  	     android:layout_toRightOf="@+id/re_fo_name"
  	     android:orientation="vertical" >

  	     <LinearLayout 
  	    	android:id="@+id/phone_number_layout"
  	    	android:layout_width="match_parent"
  	    	android:layout_height="wrap_content"
  	    	android:orientation="horizontal"
  	    	android:layout_marginLeft="6dp"
  	 
  	    	>
  	 
  	        	<TextView 
  	        		android:id="@+id/phone_start"
  	        		android:layout_width="wrap_content"
  	       			android:layout_height="wrap_content"
  	        		android:text="+86"
  	        		android:textSize="16sp"
  	        		android:textColor="#555555"
  	              	/>
  	          	<TextView 
  	        		android:layout_width="wrap_content"
  	       			android:layout_height="wrap_content"
  	        		android:text=" | "
  	        		android:textSize="16sp"
  	        		android:textColor="@color/app_color"
  	              	/>
				<EditText 
			    	android:id="@+id/et_re_1"
			    	android:layout_width="0dp"
			    	android:layout_height="wrap_content"
			    	android:layout_weight="7"
			    	android:inputType="phone"
			    	android:textColorHint="@color/login_texthint"
			    	android:textCursorDrawable="@drawable/curosr"
			    	android:maxLength="16"
			    	android:textSize="16sp"
			    	android:textColor="@color/black"
			    	android:background="@color/white"
			    
			    	/>  
			    <RelativeLayout 
			        android:layout_width="0dp"
			        android:layout_height="match_parent"
			 		android:layout_weight="1"
			 		android:layout_gravity="center_horizontal"
			        >
			       	<Button 
			        android:id="@+id/re_look"
			        android:layout_width="wrap_content"
			        android:layout_height="10dp"
			        android:layout_marginLeft="6dp"
			        android:layout_centerInParent="true"
			        android:background="@drawable/ic_eye"
			        />
			    </RelativeLayout>
  	   		
  		</LinearLayout>
  		<View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_color" 
            android:layout_marginLeft="6dp"
            android:layout_marginTop="4dp"
            />
  		<LinearLayout 
  	    	android:id="@+id/verification_code_layout"
  	    	android:layout_width="match_parent"
  	    	android:layout_height="wrap_content"
  	    	android:orientation="horizontal"
  	    	android:layout_marginLeft="6dp"
  	    	android:layout_marginTop="33dp"
  	    	>
			<LinearLayout 
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="1.5"
			    android:orientation="vertical"
			    >
			     <EditText 
  	        		android:id="@+id/re_verification_code"
  	        		android:layout_width="wrap_content"
  	        		android:layout_height="match_parent"
  	        		android:hint=" 请输入验证码"
  	        		android:textColorHint="@color/login_texthint"
  	        		android:textCursorDrawable="@drawable/curosr"
  	        		android:maxLength="6"
  	        		android:inputType="number"
  	        		android:textColor="@color/black"
  	        		android:background="@color/white"
  	        		android:textSize="16sp"
  	        		/>
			     <View
            		android:layout_width="match_parent"
            		android:layout_height="1dp"
            		android:background="@color/app_color" 
            		android:layout_marginTop="4dp"
            		/>
			</LinearLayout>
  	   

  	    	<Button
  	        	android:id="@+id/re_get_code_btn"
  	        	android:layout_width="0dp"
  	        	android:layout_height="34dp"
  	        	android:layout_weight="1"
  	        	android:layout_marginLeft="6dp"
  	        	android:layout_gravity="right"
  	        	android:text="获取验证码"
  	        	android:textColor="@color/white"
  	        	android:textSize="13sp"
  	        	android:background="@drawable/button_shape" />

  		</LinearLayout>
  		
  		<Button 
  	    	android:id="@+id/register_btn"
  	    	android:layout_width="72dp"
  	    	android:layout_height="34dp"
  	    	android:background="@drawable/button_shape"
  	    	android:text="注册"
  	        android:textColor="@color/white"
  	        android:textSize="16sp"
  	        android:layout_gravity="center_horizontal"
  	        android:layout_marginTop="80dp"
  	    />
  	     
  	 </LinearLayout>

</RelativeLayout>
