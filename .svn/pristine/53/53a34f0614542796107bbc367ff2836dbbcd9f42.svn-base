<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/img_bg"
    android:orientation="vertical"
    tools:context=".ui.PayDialog2Activity" >
    <TextView 
        android:id="@+id/pay_course_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:textColor="#555555"
        android:textSize="16sp"
        android:gravity="center_horizontal"
        />
    <TextView 
        android:id="@+id/pay_course_cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:textColor="#ff5000"
        android:textSize="19sp"
        android:gravity="center_horizontal"
        />
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:gravity="center_horizontal"
        >
      <TextView 
        android:id="@+id/pay_course_time_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#555555"
        android:textSize="14sp"
        />
       <TextView 
        android:id="@+id/colon0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pay_course_time_hour"
        android:layout_alignBaseline="@+id/pay_course_time_hour"
        android:text=":"
        android:textColor="#555555"
        android:textSize="14sp"
        />
        <TextView 
        android:id="@+id/pay_course_time_minute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/colon0"
        android:layout_alignBaseline="@+id/colon0"
        android:text="0"
        android:textColor="#555555"
        android:textSize="14sp"
        />
         <TextView 
        android:id="@+id/colon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pay_course_time_minute"
        android:layout_alignBaseline="@+id/pay_course_time_minute"
        android:text=":"
        android:textColor="#555555"
        android:textSize="14sp"
        />
          <TextView 
        android:id="@+id/pay_course_time_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/colon1"
        android:text="0"
        android:layout_alignBaseline="@+id/colon1"
        android:textColor="#555555"
        android:textSize="14sp"
        />
    <TextView 
        android:id="@+id/other_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pay_course_time_second"
        android:layout_alignBaseline="@+id/pay_course_time_second"
        android:textColor="#ff5000"
        android:text="后免费"
        android:textSize="16sp"
        />
        
    </RelativeLayout>
      <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        >
      <TextView 
        android:id="@+id/pay_course_phone_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="如有疑问请拨打 ： "
        android:textColor="#bbbbbb"
        android:textSize="12sp"
        />
    <TextView 
        android:id="@+id/pay_course_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/pay_course_phone_info"
        android:layout_alignBaseline="@+id/pay_course_phone_info"
        android:textColor="#ffa21e"
        android:text="4008201583"
        android:textSize="12sp"
        />
        
    </RelativeLayout>
    
      <LinearLayout 
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:orientation="horizontal"
          >
          <Button 
              android:id="@+id/later_look"
              android:layout_width="0dp"
              android:layout_height="46dp"
              android:layout_weight="1"
              android:text="稍后看"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:background="@drawable/img_shaohoukan"
              />
          <Button 
              android:id="@+id/immediately_look"
              android:layout_width="0dp"
              android:layout_height="46dp"
              android:layout_weight="1"
              android:text="立即看"
              android:textColor="@color/white"
              android:textSize="16sp"
              android:background="@drawable/img_lijikan"
              />
          
      </LinearLayout>
  

</LinearLayout>