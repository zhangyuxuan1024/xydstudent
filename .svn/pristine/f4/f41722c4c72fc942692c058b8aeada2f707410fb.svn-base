<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_prompt_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#E7EEF4"
    android:gravity="center"
    android:orientation="horizontal" >

    <ProgressBar
        android:id="@+id/loading_prompt_progress"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginRight="6dp"
        android:indeterminateDrawable="@drawable/loading_progress_wait" />

    <TextView
        android:id="@+id/loading_prompt_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_loading_show_start"
        android:textColor="#71acaa"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/prompt_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/loading_refresh_icon"
        android:visibility="gone" />

</LinearLayout>