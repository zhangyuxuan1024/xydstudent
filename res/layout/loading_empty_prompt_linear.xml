<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loading_empty_prompt_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f4f5f7"
    android:gravity="center"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/loading_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s_loading_show_empty"
        android:textColor="#71acaa"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/loading_empty_refresh"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="3dp"
        android:contentDescription="@string/app_name"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@drawable/loading_refresh_icon" />

</LinearLayout>